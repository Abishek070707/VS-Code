{
   // ------------------------------------- separate files settings -------------------------------------- \\
   // | HTML Files
   "[html]": {
      "editor.suggest.insertMode": "replace",
      "editor.lineHeight": 30,
      "editor.fontWeight": "350",
      "editor.letterSpacing": 0.6
   },

   // | CSS Files
   "[css]": {
      "editor.suggest.insertMode": "replace",
      "cSpell.fixSpellingWithRenameProvider": false
   },

   // | SCSS Files
   "[scss]": {
      "editor.suggest.insertMode": "replace",
      "cSpell.fixSpellingWithRenameProvider": false
   },

   // | JS Files
   "[javascript]": {
      "editor.maxTokenizationLineLength": 2500,
      "togglequotes.chars": ["\"", "'", "`"]
   },

   // | JSX
   "[javascriptreact]": {
      "togglequotes.chars": ["\"", "'", "`"]
   },

   // | TS
   "[typescript]": {
      "togglequotes.chars": ["\"", "'", "`"]
   },

   // | TSX files
   "[typescriptreact]": {
      "togglequotes.chars": ["\"", "'", "`"]
   },

   // | JSON
   "[json]": {
      "editor.quickSuggestions": { "strings": true },
      "editor.suggest.insertMode": "replace"
   },

   // ? abishek

   // --------------------------------------- Comments setting --------------------------------------------\\

   "better-comments.tags": [
      {
         "tag": "!",
         "color": "#FF2D00",
         "strikethrough": false,
         "underline": false,
         "backgroundColor": "transparent",
         "bold": false,
         "italic": true
      },
      {
         "tag": "|",
         "color": "#98C379",
         "strikethrough": false,
         "underline": false,
         "backgroundColor": "transparent",
         "bold": false,
         "italic": true
      },
      {
         "tag": "?",
         "color": "#3498DB",
         "strikethrough": false,
         "underline": false,
         "backgroundColor": "transparent",
         "bold": false,
         "italic": true
      },
      {
         "tag": "//",
         "color": "#FF2D00",
         "strikethrough": false,
         "underline": false,
         "backgroundColor": "transparent",
         "bold": false,
         "italic": true
      },
      {
         "tag": "*",
         "color": "#98C379",
         "strikethrough": false,
         "underline": false,
         "backgroundColor": "transparent",
         "bold": false,
         "italic": true
      },
      {
         "tag": "-",
         "color": "#3498DB",
         "strikethrough": false,
         "underline": false,
         "backgroundColor": "transparent",
         "bold": false,
         "italic": true
      },
      {
         "tag": "TODO",
         "color": "#FF2D00",
         "strikethrough": false,
         "underline": false,
         "backgroundColor": "transparent",
         "bold": false,
         "italic": true
      }
   ],

   // ---------------------------------- Spell Checking ------------------------------------------- \\

   "cSpell.userWords": [
      "Abishek",
      "astro",
      "autoimport",
      "brandonkirbyson",
      "Cascadia",
      "Consolas",
      "Custamizer",
      "ELCOT",
      "esbenp",
      "Greatstack",
      "quickfix",
      "stylesheet",
      "tabnine",
      "titlebar",
      "togglequotes"
   ],

   // ---------------------------------- Normal setting ------------------------------------------- \\
   "security.workspace.trust.untrustedFiles": "open",
   "breadcrumbs.enabled": false,
   "window.zoomLevel": 0.5,
   "editor.formatOnSave": true,
   "editor.defaultFormatter": "esbenp.prettier-vscode",
   "workbench.editor.enablePreview": false,
   "window.menuBarVisibility": "toggle",
   "editor.mouseWheelZoom": true,
   "workbench.iconTheme": "material-icon-theme",
   "editor.lineHeight": 35,
   "editor.fontWeight": "350",
   "workbench.layoutControl.enabled": false,
   "workbench.startupEditor": "none",
   "prettier.tabWidth": 3,

   "projectManager.tags": [
      "Personal",
      "Work",
      "Greatstack",
      "Javascript mastery",
      "Lama Dev",
      "Portfolio",
      "VS Code"
   ],
   "tabnine.experimentalAutoImports": true,
   "files.autoSave": "afterDelay",
   "errorLens.enabledDiagnosticLevels": ["error", "warning"],
   "tailwind-fold.foldStyle": "QUOTES",
   "tailwind-fold.unfoldIfLineSelected": true,
   "tailwind-fold.showTailwindImage": false,
   "tailwind-fold.foldedText": ".....",
   "tailwind-fold.supportedLanguages": [
      "html",
      "typescriptreact",
      "javascriptreact",
      "typescript",
      "javascript",
      "vue-html",
      "vue",
      "php",
      "markdown",
      "coffeescript",
      "svelte",
      "astro"
   ],
   "tailwind-fold.autoFold": false,
   "editor.guides.bracketPairs": true,
   "files.trimTrailingWhitespace": true,
   "files.simpleDialog.enable": true,
   "prettier.jsxSingleQuote": true,
   "prettier.singleQuote": true,
   "workbench.productIconTheme": "bootstrap-product-icons",
   "files.associations": {
      "*.css": "css"
   },
   "emmet.includeLanguages": {
      "postcss": "css"
   },
   "workbench.colorTheme": "Aura Dracula Spirit",
   "material-icon-theme.hidesExplorerArrows": true,
   "workbench.tree.renderIndentGuides": "none",
   "workbench.sideBar.location": "right",
   "workbench.editor.showTabs": "multiple",
   "workbench.tips.enabled": false,
   "workbench.colorCustomizations": {
      "editorSuggestWidget.selectedBackground": "#231739",
      "sideBar.background": "#140E1A",
      "list.activeSelectionBackground": "#231739",
      "list.inactiveSelectionBackground": "#231739",
      "list.focusBackground": "#231739",
      "list.hoverBackground": "#231739"
   },
   "editor.guides.indentation": false,
   "editor.renderWhitespace": "none",
   "editor.renderLineHighlight": "none",
   "editor.matchBrackets": "never",
   "editor.scrollbar.horizontal": "hidden",
   "editor.scrollbar.vertical": "hidden",
   "editor.overviewRulerBorder": false,
   "editor.scrollbar.verticalScrollbarSize": 0,
   "editor.cursorBlinking": "expand",
   "editor.cursorSmoothCaretAnimation": "on",
   "editor.tabSize": 3,
   "editor.detectIndentation": false,
   "editor.fontSize": 15,
   "editor.fontLigatures": false,
   "explorer.confirmDragAndDrop": false,
   "explorer.confirmDelete": false,
   "explorer.compactFolders": false,
   "git.decorations.enabled": false,
   "scm.diffDecorations": "none",
   "files.insertFinalNewline": true,
   "apc.electron": {
      "titleBarStyle": "hidden",
      "opacity": 1
   },
   "apc.font.family": "Cascadia Code",
   "update.mode": "default",
   "apc.menubar.compact": true,
   "apc.activityBar": {
      "position": "bottom",
      "size": 30,
      "itemSize": 30,
      "itemMargin": 0
   },
   "apc.header": {
      "height": 40
   },
   "apc.sidebar.titlebar": {
      "height": 45,
      "fontSize": 12
   },
   "apc.statusBar": {
      "position": "editor-bottom",
      "height": 30
   },
   "apc.listRow": {
      "lists": ["explorer-folders-view", "quick-input-list", "results"],
      "height": 28,
      "fontSize": 12.5
   },
   "apc.stylesheet": {
      // ".title-actions": "display: none !important", // toggle the new file and new folder icon
      ".quick-input-widget.show-file-icons, .editor-widget.fin-widget": "box-shadow: none !important",
      ".sidebar .title-label": "padding: 0 !important",
      ".monaco-workbench .monaco-list:not(.element-focused):focus:before": "outline: none !important",
      ".sidebar": "border-left: 1px solid #231739 !important",
      ".monaco-editor .cursors-layer .cursor": "background-image: linear-gradient(135deg, #67D0ff 10%, #C45DFF 100%)",
      ".quick-input-list-row div": "display: flex !important; align-items: center !important; gap: 3px",
      ".sidebar .title-label h2": "line-height: 3.1 !important; font-size: 13px !important; font-weight: 600 !important; font-family: Consolas !important",
      ".monaco-split-view2 > .monaco-scrollable-element > .split-view-container": "background: #140E1A !important"
   },
   "animations.Install-Method": "Apc Customize UI++",
   "apc.imports": [
      "file:///c:/Users/ELCOT/.vscode/extensions/brandonkirbyson.vscode-animations-2.0.2/dist/updateHandler.js"
   ],
   "animations.Default-Duration": 200,
   "animations.Scrolling": "Fade",
   "animations.Enabled": false,
   "animations.Command-Palette": "Slide",
   "animations.CursorAnimationOptions": {
      "Color": "#C45DFF"
   },
   "animations.Durations": {
      "Command-Palette": 500,
      "Scrolling": 1000,
      "Smooth-Mode": 1000
   },
   "editor.fontFamily": "'Cascadia Code'",
   "workbench.statusBar.visible": false,
   "git.autofetch": true
}

