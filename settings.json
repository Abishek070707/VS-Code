{
   // ------------------------------------- separate files settings -------------------------------------- \\
   // | HTML Files
   "[html]": {
      "editor.suggest.insertMode": "replace",
      "editor.lineHeight": 30,
      "editor.fontWeight": "350",
      "editor.letterSpacing": 0.6
   },

   // | CSS Files
   "[css]": {
      "editor.suggest.insertMode": "replace",
      "cSpell.fixSpellingWithRenameProvider": false
   },

   // | SCSS Files
   "[scss]": {
      "editor.suggest.insertMode": "replace",
      "cSpell.fixSpellingWithRenameProvider": false
   },

   // | JS Files
   "[javascript]": {
      "editor.maxTokenizationLineLength": 2500,
      "togglequotes.chars": ["\"", "'", "`"]
   },

   // | JSX
   "[javascriptreact]": {
      "togglequotes.chars": ["\"", "'", "`"]
   },

   // | TS
   "[typescript]": {
      "togglequotes.chars": ["\"", "'", "`"]
   },

   // | TSX files
   "[typescriptreact]": {
      "togglequotes.chars": ["\"", "'", "`"]
   },

   // | JSON
   "[json]": {
      "editor.quickSuggestions": { "strings": true },
      "editor.suggest.insertMode": "replace"
   },

   // ? abishek

   // --------------------------------------- Comments setting --------------------------------------------\\

   "better-comments.tags": [
      {
         "tag": "!",
         "color": "#FF2D00",
         "strikethrough": false,
         "underline": false,
         "backgroundColor": "transparent",
         "bold": false,
         "italic": true
      },
      {
         "tag": "|",
         "color": "#98C379",
         "strikethrough": false,
         "underline": false,
         "backgroundColor": "transparent",
         "bold": false,
         "italic": true
      },
      {
         "tag": "?",
         "color": "#3498DB",
         "strikethrough": false,
         "underline": false,
         "backgroundColor": "transparent",
         "bold": false,
         "italic": true
      },
      {
         "tag": "//",
         "color": "#FF2D00",
         "strikethrough": false,
         "underline": false,
         "backgroundColor": "transparent",
         "bold": false,
         "italic": true
      },
      {
         "tag": "*",
         "color": "#87ceeb",
         "strikethrough": false,
         "underline": false,
         "backgroundColor": "transparent",
         "bold": false,
         "italic": true
      },
      {
         "tag": "-",
         "color": "#3498DB",
         "strikethrough": false,
         "underline": false,
         "backgroundColor": "transparent",
         "bold": false,
         "italic": true
      },
      {
         "tag": "TODO",
         "color": "#FF2D00",
         "strikethrough": false,
         "underline": false,
         "backgroundColor": "transparent",
         "bold": false,
         "italic": true
      }
   ],

   // ---------------------------------- Spell Checking ------------------------------------------- \\

   "cSpell.userWords": [
      "Abishek",
      "astro",
      "autofetch",
      "autoimport",
      "brandonkirbyson",
      "Cascadia",
      "Consolas",
      "Custamizer",
      "ELCOT",
      "esbenp",
      "Greatstack",
      "pagedown",
      "pageup",
      "quickfix",
      "stylesheet",
      "tabnine",
      "titlebar",
      "togglequotes",
      "Trady"
   ],

   // ---------------------------------- Normal setting ------------------------------------------- \\
   "security.workspace.trust.untrustedFiles": "open",
   "editor.formatOnSave": true,
   "editor.defaultFormatter": "esbenp.prettier-vscode",
   "window.menuBarVisibility": "toggle",
   "editor.mouseWheelZoom": true,
   "workbench.iconTheme": "material-icon-theme",
   "editor.lineHeight": 35,
   "editor.fontWeight": "350",
   "workbench.layoutControl.enabled": false,
   "workbench.startupEditor": "none",
   "prettier.tabWidth": 3,

   "projectManager.tags": [
      "Personal",
      "Work",
      "Greatstack",
      "Javascript mastery",
      "Lama Dev",
      "Portfolio",
      "VS Code"
   ],
   "tabnine.experimentalAutoImports": true,
   "files.autoSave": "afterDelay",
   "errorLens.enabledDiagnosticLevels": ["error", "warning"],
   "tailwind-fold.foldStyle": "QUOTES",
   "tailwind-fold.unfoldIfLineSelected": true,
   "tailwind-fold.showTailwindImage": false,
   "tailwind-fold.foldedText": ".....",
   "tailwind-fold.supportedLanguages": [
      "html",
      "typescriptreact",
      "javascriptreact",
      "typescript",
      "javascript",
      "vue-html",
      "vue",
      "php",
      "markdown",
      "coffeescript",
      "svelte",
      "astro"
   ],
   "tailwind-fold.autoFold": false,
   "editor.guides.bracketPairs": true,
   "files.trimTrailingWhitespace": true,
   "files.simpleDialog.enable": true,
   "prettier.jsxSingleQuote": true,
   "prettier.singleQuote": true,
   "workbench.productIconTheme": "bootstrap-product-icons",
   "files.associations": {
      "*.css": "css"
   },
   "emmet.includeLanguages": {
      "postcss": "css"
   },
   "workbench.colorTheme": "Aura Dracula Spirit",
   "material-icon-theme.hidesExplorerArrows": true,
   "workbench.tree.renderIndentGuides": "none",
   "workbench.tips.enabled": false,
   "workbench.colorCustomizations": {
      "editorSuggestWidget.selectedBackground": "#231739",
      "sideBar.background": "#140E1A",
      "list.activeSelectionBackground": "#231739",
      "list.inactiveSelectionBackground": "#231739",
      "list.focusBackground": "#231739",
      "list.hoverBackground": "#231739"
   },
   "editor.renderWhitespace": "none",
   "editor.renderLineHighlight": "none",
   "editor.matchBrackets": "never",
   "editor.scrollbar.horizontal": "hidden",
   "editor.scrollbar.vertical": "hidden",
   "editor.overviewRulerBorder": false,
   "editor.scrollbar.verticalScrollbarSize": 0,
   "editor.cursorBlinking": "expand",
   "editor.cursorSmoothCaretAnimation": "on",
   "editor.tabSize": 3,
   "editor.detectIndentation": false,
   "editor.fontSize": 15,
   "editor.fontLigatures": true,
   "explorer.confirmDragAndDrop": false,
   "explorer.confirmDelete": false,
   "explorer.compactFolders": false,
   "git.decorations.enabled": false,
   "scm.diffDecorations": "none",
   "files.insertFinalNewline": true,
   "editor.fontFamily": "Cascadia Code",
   "workbench.statusBar.visible": true,
   "git.autofetch": true,
   "git.enableSmartCommit": true,
   "git.confirmSync": false,
   "workbench.sideBar.location": "right",
   "workbench.activityBar.location": "side",
   "editor.guides.indentation": false,
   "breadcrumbs.enabled": false,
   "extensions.autoUpdate": false,
   "terminal.integrated.defaultProfile.windows": "Git Bash",
   "turboConsoleLog.addSemicolonInTheEnd": true,
   "turboConsoleLog.quote": "'",
   "turboConsoleLog.logMessagePrefix": "",
   "turboConsoleLog.insertEmptyLineAfterLogMessage": true,
   "turboConsoleLog.insertEmptyLineBeforeLogMessage": true,
   "turboConsoleLog.logMessageSuffix": " : ",
   "turboConsoleLog.delimiterInsideMessage": "",
   "workbench.editor.enablePreview": false,
   "window.zoomLevel": 0.5
}
